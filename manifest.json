{
    "manifest_version": 3,
    "name": "Digital Clock",
    "version": "1.0.0",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/64.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Remember you can change the clock style in the options."
    },
    "description": "A simple digital clock. (Remember you can change the clock style in the options.)",
    "permissions": [
        "storage"
    ],
    "options_ui": {
        "page": "options.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}